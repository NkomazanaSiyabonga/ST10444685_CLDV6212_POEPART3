@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h2><i class="fas fa-user"></i> Welcome, @User.Identity.Name!</h2>
                    <p class="mb-0">Customer Dashboard - Manage your shopping experience</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag"></i> Shop Products</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Browse our extensive product catalog and find what you need.</p>
                    <a href="/Product" class="btn btn-primary w-100">Start Shopping</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> My Orders</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">View your order history and track current orders.</p>
                    <a href="@Url.Action("MyOrders", "Order")" class="btn btn-warning w-100">
                        <i class="fas fa-list"></i> View My Orders
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-cart"></i> Shopping Cart</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Review items in your cart and proceed to checkout.</p>
                    <a href="/Cart" class="btn btn-info w-100">
                        <i class="fas fa-shopping-cart"></i> View Cart
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-box-open fa-2x text-success mb-2"></i>
                    <h4>Ready to Shop</h4>
                    <p class="text-muted">Browse our wide selection of products</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-headset fa-2x text-primary mb-2"></i>
                    <h4>Need Help?</h4>
                    <p class="text-muted">Contact our support team anytime</p>
                    <a href="/Home/Contact" class="btn btn-outline-primary btn-sm">Contact Support</a>
                </div>
            </div>
        </div>
    </div>
</div>