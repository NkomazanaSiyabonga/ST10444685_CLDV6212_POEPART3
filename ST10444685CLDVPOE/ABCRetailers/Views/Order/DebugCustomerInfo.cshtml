@{
    ViewData["Title"] = "Debug Customer Info";
}

<div class="container">
    <h2>Debug Customer Information</h2>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4>User Claims</h4>
        </div>
        <div class="card-body">
            <pre>@System.Text.Json.JsonSerializer.Serialize(ViewBag.DebugInfo, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-warning">
            <h4>Customer Lookup Results</h4>
        </div>
        <div class="card-body">
            <h5>By Customer ID:</h5>
            <pre>@System.Text.Json.JsonSerializer.Serialize(ViewBag.CustomerById, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>

            <h5 class="mt-3">By Username:</h5>
            <pre>@System.Text.Json.JsonSerializer.Serialize(ViewBag.CustomerByUsername, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
        </div>
    </div>

    <a href="/Cart" class="btn btn-primary">Back to Cart</a>
</div>