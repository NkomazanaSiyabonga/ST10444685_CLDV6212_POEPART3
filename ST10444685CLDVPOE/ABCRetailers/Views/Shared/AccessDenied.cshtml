@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0"><i class="fas fa-ban"></i> Access Denied</h3>
            </div>
            <div class="card-body text-center">
                <i class="fas fa-lock fa-4x text-danger mb-3"></i>
                <h4>You don't have permission to access this page.</h4>
                <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Homepage</a>
                    <a asp-controller="Login" asp-action="Index" class="btn btn-outline-secondary">Login with Different Account</a>
                </div>
            </div>
        </div>
    </div>
</div>