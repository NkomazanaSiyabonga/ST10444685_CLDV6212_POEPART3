@model ABCRetailers.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> My Shopping Cart</h2>

    @if (Model.Items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shopping-bag"></i> Cart Items (@Model.TotalItems items)
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        <img src="@item.ImageUrl" alt="@item.ProductName"
                                                             class="me-3 rounded" style="width: 60px; height: 60px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light d-flex align-items-center justify-content-center me-3 rounded"
                                                             style="width: 60px; height: 60px;">
                                                            <i class="fas fa-box text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <h6 class="mb-1">@item.ProductName</h6>
                                                        <small class="text-muted">Stock: @item.StockAvailable</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <strong>@item.UnitPrice.ToString("C")</strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="quantity-controls d-flex align-items-center justify-content-center">
                                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                                        <div class="input-group input-group-sm" style="width: 120px;">
                                                            <button type="button" class="btn btn-outline-secondary btn-sm quantity-btn"
                                                                    data-action="decrease" data-productid="@item.ProductId">
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input type="number" name="quantity" value="@item.Quantity"
                                                                   min="1" max="@item.StockAvailable" class="form-control text-center quantity-input"
                                                                   data-productid="@item.ProductId" readonly />
                                                            <button type="button" class="btn btn-outline-secondary btn-sm quantity-btn"
                                                                    data-action="increase" data-productid="@item.ProductId">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <strong class="text-success item-total" data-productid="@item.ProductId">
                                                    @item.TotalPrice.ToString("C")
                                                </strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                <form asp-action="RemoveItem" method="post" class="d-inline">
                                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                            onclick="return confirm('Remove @item.ProductName from cart?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                    <form asp-action="ClearCart" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-warning"
                                onclick="return confirm('Clear all items from cart?')">
                            <i class="fas fa-broom"></i> Clear Cart
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-receipt"></i> Order Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@Model.TotalItems items):</span>
                            <span id="subtotal">@Model.GrandTotal.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span class="text-success">FREE</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax:</span>
                            <span>@((Model.GrandTotal * 0.15m).ToString("C"))</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong id="grand-total" class="text-success fs-5">
                                @((Model.GrandTotal * 1.15m).ToString("C"))
                            </strong>
                        </div>

                        <div class="d-grid gap-2">
                            <form asp-controller="Order" asp-action="CreateFromCart" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-lock"></i> Proceed to Checkout
                                </button>
                            </form>
                        </div>

                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt"></i> Secure checkout guaranteed
                            </small>
                        </div>
                    </div>
                </div>

                <div class="card mt-3 shadow-sm">
                    <div class="card-body">
                        <h6><i class="fas fa-truck text-primary"></i> Free Shipping</h6>
                        <p class="small text-muted mb-2">Free standard shipping on all orders</p>

                        <h6><i class="fas fa-undo text-primary"></i> Easy Returns</h6>
                        <p class="small text-muted mb-2">30-day return policy</p>

                        <h6><i class="fas fa-headset text-primary"></i> Support</h6>
                        <p class="small text-muted mb-0">24/7 customer support</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="empty-cart-icon mb-4">
                <i class="fas fa-shopping-cart fa-4x text-muted"></i>
            </div>
            <h3 class="text-muted">Your cart is empty</h3>
            <p class="text-muted mb-4">Start shopping to add items to your cart</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-store"></i> Browse Products
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Quantity button handlers
            $('.quantity-btn').on('click', function () {
                var action = $(this).data('action');
                var productId = $(this).data('productid');
                var quantityInput = $(`input[data-productid="${productId}"]`);
                var currentQuantity = parseInt(quantityInput.val());
                var maxStock = parseInt(quantityInput.attr('max'));

                if (action === 'increase' && currentQuantity < maxStock) {
                    quantityInput.val(currentQuantity + 1);
                    updateQuantity(productId, currentQuantity + 1);
                } else if (action === 'decrease' && currentQuantity > 1) {
                    quantityInput.val(currentQuantity - 1);
                    updateQuantity(productId, currentQuantity - 1);
                }
            });

            // Update quantity via AJAX
            function updateQuantity(productId, newQuantity) {
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        quantity: newQuantity
                    },
                    success: function (response) {
                        if (response.success) {
                            // Update item total
                            $(`.item-total[data-productid="${productId}"]`).text('$' + response.totalPrice.toFixed(2));

                            // Update grand total
                            $('#subtotal').text('$' + response.grandTotal.toFixed(2));
                            $('#grand-total').text('$' + (response.grandTotal * 1.15).toFixed(2));

                            // Show success message
                            showToast('Quantity updated successfully!', 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function () {
                        showToast('Error updating quantity', 'error');
                    }
                });
            }

            // Remove item via AJAX
            $('form[asp-action="RemoveItem"]').on('submit', function (e) {
                e.preventDefault();
                var form = $(this);
                var productId = form.find('input[name="productId"]').val();

                $.ajax({
                    url: '@Url.Action("RemoveItem", "Cart")',
                    type: 'POST',
                    data: {
                        productId: productId
                    },
                    success: function (response) {
                        if (response.success) {
                            // Remove the row from table
                            form.closest('tr').fadeOut(300, function () {
                                $(this).remove();
                                // Reload page if cart is empty
                                if ($('tbody tr').length === 0) {
                                    location.reload();
                                }
                            });

                            // Update totals
                            $('#subtotal').text('$' + response.grandTotal.toFixed(2));
                            $('#grand-total').text('$' + (response.grandTotal * 1.15).toFixed(2));

                            showToast('Item removed from cart', 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    },
                    error: function () {
                        showToast('Error removing item', 'error');
                    }
                });
            });

            // Toast notification function
            function showToast(message, type) {
                // Remove existing toasts
                $('.toast-container').remove();

                var toastClass = type === 'success' ? 'bg-success' : 'bg-danger';
                var toastHtml = `
                    <div class="toast-container position-fixed top-0 end-0 p-3">
                        <div class="toast align-items-center text-white ${toastClass} border-0" role="alert">
                            <div class="d-flex">
                                <div class="toast-body">
                                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} me-2"></i>
                                    ${message}
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                            </div>
                        </div>
                    </div>
                `;

                $('body').append(toastHtml);
                $('.toast').toast('show');
            }
        });
    </script>

    <style>
        .quantity-controls .input-group {
            width: 120px;
        }

        .quantity-controls .btn {
            padding: 0.25rem 0.5rem;
        }

        .quantity-controls .form-control {
            border-left: none;
            border-right: none;
        }

        .empty-cart-icon {
            opacity: 0.5;
        }

        .table td {
            vertical-align: middle;
        }

        .toast {
            z-index: 1060;
        }
    </style>
}