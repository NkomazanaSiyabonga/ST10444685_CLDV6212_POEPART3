@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<div class="contact-hero">
    <div class="container">
        <h1 class="display-4">Get in Touch</h1>
        <p class="lead">We'd love to hear from you. Here's how you can reach us.</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Contact Information -->
        <div class="col-md-6">
            <div class="contact-card card">
                <div class="card-header">
                    <i class="fas fa-info-circle me-2"></i>Contact Information
                </div>
                <div class="card-body">
                    <div class="contact-info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div>
                            <h5>Our Address</h5>
                            <p>144 Peter Road, Ruimsig, Roodepoort, South Africa</p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <i class="fas fa-envelope"></i>
                        <div>
                            <h5>Email</h5>
                            <p><a href="mailto:support@abcretailers.com">support@abcretailers.com</a></p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <i class="fas fa-phone"></i>
                        <div>
                            <h5>Phone</h5>
                            <p>+27 11 080 6000</p>
                        </div>
                    </div>

                    <div class="contact-info-item">
                        <i class="fas fa-clock"></i>
                        <div>
                            <h5>Operational Hours</h5>
                            <ul class="hours-list">
                                <li>Monday - Friday: 09:00 - 18:00</li>
                                <li>Saturday: 09:00 - 14:00</li>
                                <li>Sunday & Public Holidays: Closed</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Google Maps Embed -->
            <div class="contact-card card">
                <div class="card-header">
                    <i class="fas fa-map-marked-alt me-2"></i>Find Us
                </div>
                <div class="card-body p-0">
                    <div class="map-container">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3583.4770471853158!2d27.873880075411215!3d-26.08334197715115!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e959ef5277b96a7%3A0xc4aa15508f8e5e8c!2sIIE%20MSA!5e0!3m2!1sen!2sza!4v1757853196202!5m2!1sen!2sza"
                                width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Google Form Embed -->
        <div class="col-md-6">
            <div class="contact-card card">
                <div class="card-header"
                    <i class="fas fa-file-alt me-2"></i>Enquiry Form
                </div>
                <div class="card-body p-0">
                    <div class="form-container">
                        <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSdmUZjY8uhU7v4Jn76yGHOBrN9dVhBTyPZwF8BWEPVPVR3REw/viewform?embedded=true"
                        width="640" height="1428" frameborder="0" marginheight="0" marginwidth="0">
                        Loading…
                    </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>