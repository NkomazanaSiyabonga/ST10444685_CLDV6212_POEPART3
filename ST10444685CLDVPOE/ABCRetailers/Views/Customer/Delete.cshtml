@model ABCRetailers.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this customer?
</div>

<div class="card mb-3" style="max-width: 600px;">
    <div class="card-body">
        <p><strong>Partition Key:</strong> @Model.PartitionKey</p>
        <p><strong>Row Key:</strong> @Model.RowKey</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <!-- Add more properties as needed -->
    </div>
</div>

<form asp-action="Delete" method="post"
      asp-route-partitionKey="@Model.PartitionKey"
      asp-route-rowKey="@Model.RowKey">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
