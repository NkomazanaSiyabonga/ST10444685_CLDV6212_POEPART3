@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <i class="fas fa-check-circle fa-4x mb-3"></i>
                    <h1 class="card-title display-4 mb-0">Order Confirmed!</h1>
                </div>
                <div class="card-body text-center p-5">
                    <h3 class="text-success mb-4">Thank you for your purchase!</h3>
                    <p class="lead mb-4">Your order has been successfully placed and is being processed.</p>
                    <p class="text-muted mb-5">You will receive a confirmation email shortly with your order details.</p>

                    <div class="row g-4 mb-5">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-shipping-fast fa-3x text-primary"></i>
                                    </div>
                                    <h5 class="card-title">Shipping Information</h5>
                                    <p class="card-text mb-2">Standard Delivery</p>
                                    <small class="text-muted">Estimated delivery: 3-5 business days</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-body text-center p-4">
                                    <div class="mb-3">
                                        <i class="fas fa-headset fa-3x text-info"></i>
                                    </div>
                                    <h5 class="card-title">Need Help?</h5>
                                    <p class="card-text mb-2">Contact our support team</p>
                                    <small class="text-muted">support@abcretailers.com</small>
                                    <br>
                                    <small class="text-muted">+1 (555) 123-4567</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4 mb-5">
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center p-3">
                                    <i class="fas fa-box text-primary mb-2"></i>
                                    <h6 class="mb-1">Order Prepared</h6>
                                    <small class="text-muted">Items being packed</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center p-3">
                                    <i class="fas fa-shipping-fast text-warning mb-2"></i>
                                    <h6 class="mb-1">Shipped</h6>
                                    <small class="text-muted">On its way to you</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center p-3">
                                    <i class="fas fa-home text-success mb-2"></i>
                                    <h6 class="mb-1">Delivered</h6>
                                    <small class="text-muted">At your doorstep</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a asp-controller="Order" asp-action="MyOrders" class="btn btn-primary btn-lg me-md-3">
                            <i class="fas fa-list me-2"></i> View My Orders
                        </a>
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-shopping-bag me-2"></i> Continue Shopping
                        </a>
                    </div>

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-link text-muted">
                            <i class="fas fa-arrow-left me-1"></i> Back to Homepage
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
    }

    .card-header {
        border-radius: 15px 15px 0 0 !important;
    }

    .btn-lg {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
    }

    .display-4 {
        font-weight: 300;
    }
</style>