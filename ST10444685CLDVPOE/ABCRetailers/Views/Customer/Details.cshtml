@model ABCRetailers.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Customer Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Customer ID:</dt>
            <dd class="col-sm-9">@Model.RowKey</dd>

            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name @Model.Surname</dd>

            <dt class="col-sm-3">Username:</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">
                <a href="mailto:@Model.Email">@Model.Email</a>
            </dd>

            <dt class="col-sm-3">Shipping Address:</dt>
            <dd class="col-sm-9">@Model.ShippingAddress</dd>
        </dl>
    </div>
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>